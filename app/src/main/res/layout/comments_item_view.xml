<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:layout_marginBottom="@dimen/dp_10">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/commentUserImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/test_register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/commentUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        tools:text="محمد خالد"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintStart_toEndOf="@id/commentUserImage"
        app:layout_constraintTop_toTopOf="@id/commentUserImage" />

    <androidx.appcompat.widget.AppCompatRatingBar
        android:id="@+id/commentRateBar"
        style="?attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1"
        android:rating="4"
        app:layout_constraintStart_toStartOf="@id/commentUserName"
        app:layout_constraintTop_toBottomOf="@id/commentUserName" />

    <TextView
        android:id="@+id/commentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="اذا كنت تحتاج الي اذا كنت تحتاج الي اذا كنت تحتاج الي اذا كنت تحتاج الي"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintStart_toStartOf="@id/commentUserName"
        app:layout_constraintTop_toBottomOf="@id/commentRateBar" />

    <ImageView
        android:id="@+id/reportComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:visibility="visible"
        android:src="@drawable/ic_flag_grey_500_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/commentUserName" />

    <ImageView
        android:id="@+id/menuComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:src="@drawable/options"
        android:padding="8dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/commentUserName" />
</androidx.constraintlayout.widget.ConstraintLayout>