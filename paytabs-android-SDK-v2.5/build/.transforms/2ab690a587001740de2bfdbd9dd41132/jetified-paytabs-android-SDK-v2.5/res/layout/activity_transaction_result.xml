<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >
    
    <LinearLayout
        android:id="@+id/headerLine"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:textColor="@android:color/black"
        android:background="@drawable/header_gradient"
        android:weightSum="6" >
        
	     <ImageView
	         android:id="@+id/imageViewLogo"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_gravity="center_vertical"
	         android:layout_weight="0.5"
	         android:src="@drawable/ic_header" />
	     
	     <TextView
	          android:id="@+id/textViewHidden1"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:layout_toRightOf="@+id/imageViewLogo"
	          android:layout_weight="5"
	          android:visibility="invisible"
	          android:text=""
	          android:textAppearance="?android:attr/textAppearanceLarge" />

	     <ImageView
	         android:id="@+id/buttonLogout"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_marginRight="10dp"
	         android:layout_gravity="center_vertical"
	         android:layout_weight="0.5"
	         android:clickable="true"
	         android:visibility="gone"
	         android:src="@drawable/ic_logout" />

    </LinearLayout>
    
    <LinearLayout
	        android:id="@+id/headerMerchant"
	        android:layout_width="fill_parent"
	        android:layout_height="65dp"
	        android:background="@color/white"
	        android:textColor="@android:color/black"
	        android:weightSum="5" >			     
		     
		     <ImageView
	               android:id="@+id/imageViewStoreLogo"
	               android:layout_width="wrap_content"
	               android:layout_height="55dp"
	               android:adjustViewBounds="true"
	               android:layout_marginRight="5dp"
	               android:layout_marginBottom="5dp"
		         android:layout_marginTop="5dp"
	               android:layout_weight="1" />			     
		     
		     <TextView
		          android:id="@+id/textViewHidden"
		          android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		          android:layout_toRightOf="@+id/imageViewLogo"
		          android:layout_weight="3"
		          android:visibility="invisible"
		          android:text=""
		          android:textAppearance="?android:attr/textAppearanceLarge" />
		     
		     <TextView
	                android:id="@+id/textviewStore"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginRight="10dp"
	                android:layout_toRightOf="@+id/imageViewLogo"
	                android:layout_weight="1"
	                android:layout_gravity="center"
	                android:gravity="center"
	                android:textColor="@color/store"
	                android:text="STORE"
	                android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/horizontal_line2">        
    </LinearLayout>
		    
    <LinearLayout
        android:id="@+id/amountLayoutView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/amountLayout"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@color/main_bg"
        android:textColor="@android:color/black"
        android:orientation="vertical"
        android:weightSum="6" >
			  
        <TextView
	        android:id="@+id/txtViewResultTitle"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Medium Text"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_gravity="center"
	        android:gravity="center"
	        android:textSize="30dp" />
        
	    <ImageView
	        android:id="@+id/imageViewResult"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:gravity="center"
	        android:layout_marginTop="10dp"
	        android:src="@drawable/reject" />
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/horizontal_line2">        
    </LinearLayout>

    <TextView
        android:id="@+id/txtViewResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textSize="20sp" />
    
    <TextView
        android:id="@+id/txtViewTrans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textColor="@color/amount"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btnContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/pay_now"
        android:textColor="@color/white"
        android:width="250dp"
        android:text="@string/lbl_continue" />

</LinearLayout>
